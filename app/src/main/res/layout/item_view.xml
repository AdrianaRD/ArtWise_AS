<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    xmlns:tools="http://schemas.android.com/tools">
    
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageView"
        tools:src="@drawable/logo2"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/titulo"
        android:textColor="@color/black"
        android:layout_toEndOf="@id/imageView"
        tools:text="ArtWise"
        android:textSize="28dp"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/descripción"
        android:textColor="@color/black"
        android:textSize="20dp"
        tools:text="Es una guía de audio que ofrece una experiencia interactiva y enriquecedora al visitar un museo."
        android:layout_toEndOf="@id/imageView"
        android:layout_below="@id/titulo"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/descripción"
        android:layout_marginTop="10dp"
        android:background="#858484"/>



</RelativeLayout>